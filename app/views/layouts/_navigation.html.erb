<ul class="nav navbar-nav">
  <li>
    <%= link_to "Postit!", root_path, class: 'navbar-brand', style: 'margin-left: 50px' %>
  </li>
  <li class="dropdown">
    <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>
      Categories <span class="caret"></span>
    <% end %>

    <ul class="dropdown-menu">
      <% Category.all.each do |category| %>
        <li><%= link_to category.name, category_path(category) %></li>
      <% end %>

      <% if logged_in? %>
        <li class="divider"></li>

        <li>
          <%= link_to new_category_path do %>
            <i class="glyphicon glyphicon-plus"></i>
            New Category
          <% end %>
        </li>
      <% end %>
    </ul>
  </li>
  <% if logged_in? %>
    <li>
      <div class="nav_item">
        <%= link_to 'New Post', new_post_path, class: 'btn btn-success navbar-btn' %>
      </div>
    </li>

    <li class="dropdown">
      <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>
        <%= current_user.username %> <span class="caret"></span>
      <% end %>

      <ul class="dropdown-menu">
        <li>
          <%= link_to edit_user_path(current_user) do %>
            <!--<i class="glyphicon glyphicon-pencil"></i>-->
            Edit profile
          <% end %>
        </li>

        <li>
          <%= link_to user_path(current_user) do %>
            <!--<i class="glyphicon glyphicon-user"></i>-->
            View profile
          <% end %>
        </li>

        <li>
          <%= link_to logout_path do %>
            <!--<i class="glyphicon glyphicon-circle-arrow-right"></i>-->
            Log out
          <% end %>
        </li>
      </ul>
    </li>
  <% else %>
    <li>
      <div class="nav_item">
        <%= link_to 'Register', register_path, class: 'btn  btn-success navbar-btn' %>
      </div>
    </li>

    <li>
      <div class="nav_item">
        <%= link_to 'Log in', login_path, class: 'btn btn-default navbar-btn' %>
      </div>
    </li>
  <% end %>
</ul>

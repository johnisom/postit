<div class="row">
  <div class="col-xs-1 well text-center">
    <%= link_to '▲', vote_post_path(post, vote: true), method: :post, class: 'btn', style: 'color: inherit' %>
    <br>
    <%= link_to '▼', vote_post_path(post, vote: true), method: :post, class: 'btn', style: 'color: inherit' %>
  </div>

  <div class="col-xs-8 col-xs-offset-1 well">
    <%= render post.categories %>

    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>

    <p>
      <span class="quiet">posted by</span>
      <%= link_to post.creator.username, user_path(post.creator) %>
      <small>at <%= display_datetime(post.created_at) %></small>
    </p>

    <small>
      <span>
        <%= link_to pluralize(post.comments.size, 'comment'),
                    post_path(post) %>
      </span>
    </small>
  </div>
</div>
